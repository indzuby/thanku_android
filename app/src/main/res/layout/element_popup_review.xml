<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:id="@+id/layout"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:id="@+id/titleView"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="리뷰작성"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="8dp"
            android:id="@+id/closeButton"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_close_black_18dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네네치킨"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="평점 : "
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/scoreView1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:src="@drawable/selector_favorite"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/scoreView2"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:src="@drawable/selector_favorite"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/scoreView3"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:src="@drawable/selector_favorite"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/scoreView4"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:src="@drawable/selector_favorite"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/scoreView5"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:src="@drawable/selector_favorite"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_layout"
        android:gravity="top"
        android:hint="자유롭게 작성해주세요."
        android:lines="7"
        android:padding="8dp"
        android:textColorHint="@color/darkGray"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:src="@mipmap/sample"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/photoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:elevation="2dp"
        android:padding="16dp"
        android:src="@mipmap/ic_camera_alt_black_36dp" />

    <Button
        android:id="@+id/addReviewButton"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="@color/themeColor"
        android:text="@string/registration"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>