<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/element_event"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:paddingBottom="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical"
            android:background="@drawable/selector_navigation_item"
            android:padding="16dp"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="48dp"
                android:src="@mipmap/ic_restaurant_black_48dp"
                android:layout_height="48dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="맛집배달"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:text="엄선된 맛집 음식을 편하게 드세요."
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_navigation_item"
            android:padding="16dp"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="48dp"
                android:src="@mipmap/ic_local_shipping_black_48dp"
                android:layout_height="48dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="사다주기"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:text="필요 하신 물건을 사다 드립니다."
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_navigation_item"
            android:padding="16dp"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="48dp"
                android:src="@mipmap/sample"
                android:layout_height="48dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="생활편의"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:text="집안 일/귀찮은 일/힘쓰는 일 맡겨만 주세요."
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_navigation_item"
            android:padding="16dp"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="48dp"
                android:src="@mipmap/ic_local_shipping_black_48dp"
                android:layout_height="48dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="퀵서비스"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:text="전하실 물건이 잇으신가요?"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>