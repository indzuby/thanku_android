<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/element_event" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화 (또는 이메일)"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/idEditText"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:hint="휴대전화 번호를 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/passwordEditText"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:textColorHint="@color/darkGray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/loginButton"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@color/themeColor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/login" />

            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/findPasswordButton"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/findPassword" />

                <TextView
                    android:id="@+id/qnaButton"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/qna" />
            </RelativeLayout>

            <ImageButton
                android:elevation="2dp"
                android:id="@+id/facebookLogin"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_login_facebook" />

            <ImageButton
                android:elevation="2dp"
                android:id="@+id/kakaoLogin"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_login_kakao" />

            <Button
                android:elevation="2dp"
                android:id="@+id/signUpButton"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/signUp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>