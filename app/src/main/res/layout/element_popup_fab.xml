<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black50"
    android:id="@+id/layout"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cartButton"
        android:layout_width="40dp"
        android:src="@mipmap/ic_shopping_cart_black_18dp"
        android:background="@drawable/fab_oval"
        android:elevation="4dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/commentButton"
        android:layout_height="40dp" />

    <ImageButton
        android:id="@+id/commentButton"
        android:layout_width="40dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_comment_black_18dp"
        android:background="@drawable/fab_oval"
        android:elevation="4dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/phoneButton"
        android:layout_height="40dp" />
    <ImageButton
        android:id="@+id/phoneButton"
        android:layout_width="40dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_phone_black_18dp"
        android:background="@drawable/fab_oval"
        android:elevation="4dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/fabButton"
        android:layout_height="40dp" />

    <ImageButton
        android:id="@+id/fabButton"
        android:layout_width="56dp"
        android:src="@mipmap/ic_close_black_36dp"
        android:background="@drawable/fab_oval"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="56dp" />


</RelativeLayout>